@{
}
@model IEnumerable<DTO.ProjectDTO>

<form method="get" asp-action="Index">
    <input type="text" name="search" placeholder="Search projects..." class="form-control" />
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ref Number</th>
            <th>Project Name</th>
            <th>EmployeeID</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.ProjectID</td>
                <td>@p.ProjectRefNumber</td>
                <td>@p.ProjectName</td>
                <td>@p.EmployeeID</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.ProjectID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@p.ProjectID">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
